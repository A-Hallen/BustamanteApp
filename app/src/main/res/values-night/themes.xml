<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bustamante" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_black1</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_white</item>
        <item name="colorSecondaryVariant">@color/mid_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOutline">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Bustamante.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
</resources>