<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:background="@color/soft_white2"
    android:paddingHorizontal="10dp"
    android:transitionName="proveedor_transition"
    tools:context=".ui.tcps.ProveedorFullSizeFragment">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tipo"
            tools:text="TCP"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/downloadBtn"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/more"
            android:background="@drawable/round_max_ripple_black"
            android:layout_marginHorizontal="10dp"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/download" />
    </LinearLayout>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:ellipsize="end"
        android:textColor="@color/dark_black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@+id/product_list"
        tools:text="Brito" />


    <TextView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:padding="10dp"
        android:ellipsize="end"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        tools:text="ventanas, asdasd, asdasd, asdasd, gfdf" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="10dp"
        tools:listitem="@layout/item_product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_list" />

</androidx.constraintlayout.widget.ConstraintLayout>