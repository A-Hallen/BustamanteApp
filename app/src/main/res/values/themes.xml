<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bustamante" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_black</item>
        <item name="colorPrimaryVariant">@color/dark_black1</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_white</item>
        <item name="colorSecondaryVariant">@color/mid_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOutline">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SearchViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Cambia el color del cursor a negro -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.Bustamante.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bustamante.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bustamante.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>